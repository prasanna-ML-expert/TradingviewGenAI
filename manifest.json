{
  "manifest_version": 3,
  "name": "TradingView Gemini Integration",
  "version": "1.0",
  "description": "A Firefox extension that integrates Gemini with TradingView charts",
  "permissions": ["activeTab", "scripting","tabs","storage","<all_urls>","alarms"],
  "host_permissions": [
    "*://*.tradingview.com/*",
    "https://generativelanguage.googleapis.com/",
    "https://aiplatform.googleapis.com/" ,
    "https://gemini.google.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.tradingview.com/*","https://gemini.google.com/*"],
      "js": ["contentScript.js", "contentScript_charts.js","content_pdf.js"]
    }
  ],
  "background": {
         "scripts": ["backgroundScript.js"],
        "persistent": true 
  },
  "sidebar_action": {
	  "default_title": "Gen AI",
	  "default_panel": "popup.html" 
	},
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
